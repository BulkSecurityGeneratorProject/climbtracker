<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Preference.
    -->
    <changeSet id="20160206134458" author="jhipster">
        <createTable tableName="preference">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="grade_system_id" type="bigint"/>
            <column name="crag_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="preference"
                                 constraintName="fk_preference_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="grade_system_id"
                                 baseTableName="preference"
                                 constraintName="fk_preference_gradesystem_id"
                                 referencedColumnNames="id"
                                 referencedTableName="grade_system"/>

        <addForeignKeyConstraint baseColumnNames="crag_id"
                                 baseTableName="preference"
                                 constraintName="fk_preference_crag_id"
                                 referencedColumnNames="id"
                                 referencedTableName="crag"/>

        <createTable tableName="preference_route">
            <column name="routes_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="preferences_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="preferences_id, routes_id" tableName="preference_route"/>

        <addForeignKeyConstraint baseColumnNames="preferences_id"
                                 baseTableName="preference_route"
                                 constraintName="fk_preference_route_route_id"
                                 referencedColumnNames="id"
                                 referencedTableName="preference"/>

        <addForeignKeyConstraint baseColumnNames="routes_id"
                                 baseTableName="preference_route"
                                 constraintName="fk_preference_route_preference_id"
                                 referencedColumnNames="id"
                                 referencedTableName="route"/>
        
    </changeSet>
</databaseChangeLog>
